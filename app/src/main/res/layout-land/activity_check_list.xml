<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="730dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    tools:context=".CheckNoWashType">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="CHECKLIST"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true">

                </TextView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:text="ใบจัดเซ็ท                               :"
                    android:layout_marginTop="50dp"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:text="เตือนสีแดงรอบ Remark    :"
                    android:layout_marginTop="100dp"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp">

                </TextView>

                <EditText
                    android:id="@+id/num_round"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="235dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/text_standard">

                </EditText>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="รอบ"
                    android:layout_marginTop="100dp"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="300dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:text="VALIDATION SHEET          :"
                    android:layout_marginTop="150dp"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp">

                </TextView>

                <CheckBox
                    android:id="@+id/ch3"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="580dp"
                    android:layout_marginTop="150dp"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:checked="false"
                    android:enabled="true"
                    android:text="Labeling Check"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <CheckBox
                    android:id="@+id/ch2"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="440dp"
                    android:layout_marginTop="150dp"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:checked="false"
                    android:enabled="true"
                    android:text="Fillter Check"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <CheckBox
                    android:id="@+id/ch1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="230dp"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:checked="false"
                    android:enabled="true"
                    android:layout_marginTop="150dp"
                    android:text="Internal Indicator Check"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/type1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="50dp"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:checked="false"
                    android:enabled="true"
                    android:text="พิมพ์"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/type2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="230dp"
                    android:buttonTint="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:checked="false"
                    android:enabled="true"
                    android:layout_marginTop="50dp"
                    android:text="ไม่พิมพ์"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="200dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bt_red_cancel" />

                <Button
                    android:id="@+id/bt_comfirm"
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="200dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bt_confirm_nowash" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>