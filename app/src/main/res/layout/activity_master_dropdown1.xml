<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="6dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutSearch"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/txt_search"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/text_dropdown"
            android:color="#111111"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0.0dip"
            android:background="@drawable/search"
            android:layout_alignBottom="@+id/txt_search"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txt_search" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/occupancy_rate_text"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/txt_edit_graywhite"
            android:layout_marginLeft="5dp"
            android:hint="กรอกอัตราเต็มตู้ต่อรอบ / เปอร์เซ็น"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_marginTop="70dp"
            android:background="@color/list_background_color"></ListView>

        <Button
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="580dp"
            android:layout_marginLeft="240dp"
            android:background="@drawable/bt_save_newitem"/>

    </RelativeLayout>

</LinearLayout>

