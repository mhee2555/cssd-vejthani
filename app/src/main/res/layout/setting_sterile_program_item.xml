<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="690dp"
    android:background="@drawable/bg_bluetab"
    android:orientation="vertical"
    tools:context=".master_data.SterileProgramItemActivity">

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="ข้อมูลโปรแกรมฆ่าเชื้อ"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Li2"
        android:layout_width="535dp"
        android:layout_height="429dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:layout_marginStart="105dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView77"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ค้นหาเครื่องมือ"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/txt_edit_graywhite"
                android:ems="10"
                android:hint="ค้นหาจาก รหัส,ชื่อเครื่องมือ"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textAlignment="textStart" />

            <ListView
                android:id="@+id/list_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:listSelector="#2b89f2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li3"
        android:layout_width="535dp"
        android:layout_height="429dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Li2"
        android:layout_marginEnd="110dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="โปรแกรมฆ่าเชื้อ"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tFields1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:paddingTop="13dp"
                    android:text="เลือกทั้งหมด"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/chx_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:buttonTint="@color/colorBlue"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:textSize="12sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_program"
                android:layout_width="match_parent"
                android:layout_height="280dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_master"
            android:text="บันทึก"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="1141dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_process"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_master_cyanblue_noselect"
            android:paddingBottom="5dp"
            android:text="ประเภทการฆ่าเชื้อ"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_program"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_master_cyanblue_noselect"
            android:paddingBottom="5dp"
            android:text="โปรแกรมฆ่าเชื้อ"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_programitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_master_cyanblue"
            android:enabled="false"
            android:paddingBottom="5dp"
            android:text="เครื่องมือและโปรแกรมฆ่าเชื้อ"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="201dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/bt_back" />


</RelativeLayout>
