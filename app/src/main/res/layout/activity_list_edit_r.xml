<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/imv_add"
            android:layout_alignTop="@+id/txt_item_name"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:text="1."
            android:textColor="@color/list_text_color"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/txt_no"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="ItemName"
            android:textColor="@color/list_text_color"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/txt_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_no"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/txt_no"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="I00001"
            android:textColor="#787878"
            android:textSize="13dp"></TextView>


        <ImageView
            android:id="@+id/imv_add"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_left_blue" />

    </RelativeLayout>

</LinearLayout>


