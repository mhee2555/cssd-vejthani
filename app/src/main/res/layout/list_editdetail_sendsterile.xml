<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/center">

            <!-- <CheckBox
            android:id="@+id/ckselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />-->

            <Spinner
                android:id="@+id/occurance_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/itemname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/Ucode"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"
                android:text="หมายเหตุ :"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/xremark_detail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView53"
                android:layout_toEndOf="@+id/textView53"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/Ucode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/itemname"
                android:layout_marginStart="22dp"
                android:layout_marginTop="2dp"
                android:text="text"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btdel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/ic_delete" />

            <!-- <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/resterile_spinner"
                android:layout_toStartOf="@+id/resterile_spinner"
                android:paddingRight="5dp"
                android:text="Re-Sterile" />-->

            <CheckBox
                android:id="@+id/ckIsSterile"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/textView54"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/resterile_spinner"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/resterile_IV"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="43dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_r_grey" />

            <TextView
                android:id="@+id/r_name"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bt_note"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="77dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_list_blue" />

            <TextView
                android:id="@+id/bt_risk"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="115dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_risk_icon_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/font"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <!--  <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_doc" />-->
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>