<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="620dp"
    android:background="@drawable/popup_frame_recall"
    tools:context=".dialog_search_recall">

    <ImageView
        android:id="@+id/imageprint"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/imageback"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp"
        android:background="@drawable/ic_print_1"
        app:srcCompat="@drawable/bt_print_recall" />

    <ImageView
        android:id="@+id/imageback"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/bt_back_blue"
        app:srcCompat="@drawable/bt_back_blue" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:text="เอกสารเรียกคืนย้อนหลัง"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="750dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/txt"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView79"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="120dp"
                android:paddingTop="2dp"
                android:text="วันที่ :"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@drawable/txt_edit_graywhite"
                android:enabled="false"
                android:textAlignment="center"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgcalendar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/calender01"
                app:srcCompat="@drawable/calender01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView788"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="120dp"
                android:paddingTop="2dp"
                android:text="ประเภทการเรียกคืน :"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/doctypeno_spn"
                style="@style/spinner_style_register"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp" />

            <Button
                android:id="@+id/button_search"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bt_search_recall" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="750dp"
        android:layout_height="310dp"
        android:layout_above="@+id/imageprint"
        android:layout_centerHorizontal="true"
        android:background="@drawable/txt"
        android:orientation="vertical">

        <ListView
            android:id="@+id/Rv_new"
            android:layout_width="725dp"
            android:layout_height="290dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:listSelector="@color/fefe">

        </ListView>

    </RelativeLayout>

</RelativeLayout>