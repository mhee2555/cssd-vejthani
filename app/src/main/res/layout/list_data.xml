<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:paddingStart="40dp">


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@drawable/txt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView7"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:text="วันที่แพ็ค" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imageView7"
            android:layout_marginEnd="142dp"
            android:layout_marginTop="35dp"
            android:text="วันที่แพ็ค" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/tFields3"
            android:layout_marginTop="-10dp"
            android:paddingTop="5dp"
            android:text="แผนก :"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tFields3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView35"
            android:layout_below="@+id/textView35"
            android:layout_marginTop="-5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tFields4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/textView35"
            android:layout_marginTop="-5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tFields5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView54"
            android:layout_marginStart="-7dp"
            android:layout_toEndOf="@+id/textView35"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tFields7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView54"
            android:layout_alignStart="@+id/textView36"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tFields8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="47dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tFields2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="65dp"
            android:layout_weight="1"
            android:background="@drawable/text_edit"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="R"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_bank"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tFields1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView7"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/text_edit"
            android:paddingTop="5dp"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

    </RelativeLayout>

</LinearLayout>