<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/check_no"
            android:layout_width="30dp"
            android:layout_height="wrap_content"></CheckBox>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/txt_IsRemarkems"
            android:maxLines="1"
            android:text="xxx"
            android:textColor="@color/list_text_color"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/txt_packingmat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_basket"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/txt_basket"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="pag"
            android:textColor="@color/list_text_color"
            android:textSize="11dp"></TextView>


        <TextView
            android:id="@+id/txt_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_name"
            android:layout_alignStart="@+id/txt_item_name"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="txt_basket"
            android:textColor="@color/colorGray"
            android:textSize="11dp"></TextView>

        <ImageView
            android:id="@+id/txt_IsRemarkems"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/check_no"
            android:background="@drawable/uncheck02_32"
            android:gravity="center_vertical"
            android:visibility="gone"></ImageView><![CDATA[



        " />


    ]]>
    </RelativeLayout>

    <ListView
        android:id="@+id/sub_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp" />

</LinearLayout>


