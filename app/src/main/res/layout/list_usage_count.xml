<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:id="@+id/ln_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/txt_edit_graywhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/index"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/item_name_count"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="ด่วนมาก"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/usagecount"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/item_name_count"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="_____________"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/usagecount_qty"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/usagecount"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="PCS/SET"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"></TextView>

<!--            <TextView-->
<!--                android:layout_width="160dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:layout_marginLeft="455dp"-->
<!--                android:layout_marginTop="4dp"-->
<!--                android:gravity="center_vertical"-->
<!--                android:maxLines="1"-->
<!--                android:text="[ ครบรอบการใช้งาน ]"-->
<!--                android:textColor="@color/colorRedNew"-->
<!--                android:textSize="16dp"></TextView>-->

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
