<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="430dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_31"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@drawable/bg_curve">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:id="@+id/textView84"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:text="ข้อมูลสต๊อก"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="45dp">

                    <TextView
                        android:id="@+id/itemcode_stock"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="รหัส : I0001"
                        android:gravity="left"
                        android:textSize="18dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite">
                    </TextView>

                    <TextView
                        android:id="@+id/itemname_stock"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="ชื่อรายการ : I0001"
                        android:gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite">
                    </TextView>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
        <!-- กระบวรการบรรจุ -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="กระบวนการบรรจุ"
                    android:textColor="@color/form_label"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_on_cssd"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_standard_disable"
                    android:enabled="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorEditText"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Minimum"
                    android:textColor="@color/form_label"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_minimum"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_standard_disable"
                    android:enabled="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorEditText"
                    android:textSize="16dp" />

            </LinearLayout>

            <!-- อยู่ในสต็อค -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="อยู่ในสต๊อค"
                    android:textColor="@color/form_label"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_on_stock"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_standard_disable"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="8dp"
                    android:enabled="false"
                    android:textColor="@color/colorEditText"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Maximum"
                    android:textColor="@color/form_label"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_maximum"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_standard_disable"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="8dp"
                    android:enabled="false"
                    android:textColor="@color/colorEditText"
                    android:textSize="16dp" />

            </LinearLayout>

            <!-- จ่ายให้แผนก -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="จ่ายให้แผนก"
                    android:textColor="@color/form_label"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_on_department"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_standard_disable"
                    android:enabled="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorEditText"
                    android:textSize="16dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <!-- รวม -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="รวม"
                    android:textColor="@color/form_label"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_all_item_stock"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/text_standard_disable"
                    android:enabled="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorEditText"
                    android:textSize="16dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.5" />

            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_back_stockdetail"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_back_sendsterile" />

            <Button
                android:id="@+id/add_stock"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="490dp"
                android:background="@drawable/ss_st_addset_enable">

            </Button>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>