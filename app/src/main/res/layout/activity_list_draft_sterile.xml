<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_doc_date"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="วันที่ : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_doc_date"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/label_doc_date"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="23-08-2018"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/label_doc_no"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/txt_doc_date"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="เลขที่เอกสาร : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_doc_no"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/txt_doc_date"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="S1808-00001"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/label_program"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/txt_round"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="โปรแกรมฆ่าเชื้อ : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_program"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/label_program"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="NORMALGOODS 134(P6)"
                android:textColor="@color/colorGray"
                android:textSize="12dp"></TextView>




        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_usr_prepare"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="ผู้เตรียม : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_usr_prepare"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="พลอย วีระ"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>


            <TextView
                android:id="@+id/label_usr_approve"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="ผู้ตรวจ : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_usr_approve"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="พลอย วีระ"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>


            <TextView
                android:id="@+id/label_usr_sterile"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="ผู้ดำเเนินงาน : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:visibility="gone"
            android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_usr_sterile"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="พลอย วีระ"
                android:visibility="gone"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_round"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="รอบ : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txt_round"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/sum_qty"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="จำนวนทั้งหมด : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/sum_qty_int"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/label_print_balance"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="ค้างพิมพ์ : "
                android:textColor="@color/list_text_color"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/txt_print_balance"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/colorGray"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:visibility="gone"></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>






