<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/rectangle"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_remove"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_left_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/imv_remove"
            android:maxLines="1"
            android:text="1."
            android:textColor="@color/list_text_color"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/txt_no"
            android:maxLines="1"
            android:text="xxx"
            android:textColor="@color/list_text_color"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/txt_packingmat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txt_item_name"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="pag"
            android:textColor="@color/list_text_color"
            android:textSize="11dp"></TextView>


        <TextView
            android:id="@+id/txt_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_packingmat"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/txt_no"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/colorGray"
            android:textSize="11dp"></TextView>

        <ImageView
            android:id="@+id/txt_IsRemarkems"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imv_remove"
            android:background="@drawable/uncheck02_32"
            android:gravity="center_vertical"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/txt_qty"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imv_add"
            android:layout_centerVertical="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_toStartOf="@+id/imv_add"
            android:background="@drawable/text_edit"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:textColor="@color/list_text_color"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/imv_add"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_right_blue" />

        <CheckBox
            android:id="@+id/chk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center|center_horizontal"
            android:buttonTint="@color/colorBlue"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/isPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorGray"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:visibility="gone" />" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_item_code"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:visibility="gone"></TextView>

    <TextView
        android:id="@+id/txt_item_program_id"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:visibility="gone"></TextView>

    <ListView
        android:id="@+id/sub_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp" />

</LinearLayout>


