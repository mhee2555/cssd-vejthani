<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="800dp"
    android:layout_height="650dp">

    <RelativeLayout
        android:layout_width="800dp"
        android:layout_height="650dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/box">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="จัดการผ้าหมดอายุในสต๊อกจ่ายกลาง"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="790dp"
            android:layout_height="450dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp">

           <EditText
               android:id="@+id/search_name"
               android:layout_width="270dp"
               android:layout_height="50dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:hint="ค้นหารายการ"
               android:paddingStart="20dp"
               android:background="@drawable/txt_edit_graywhite">
           </EditText>

            <EditText
                android:id="@+id/search_scan"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="510dp"
                android:hint="สแกนเช็ครายการ"
                android:singleLine="true"
                android:paddingStart="20dp"
                android:background="@drawable/txt_edit_graywhite">
            </EditText>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="735dp"
                android:background="@drawable/ic_baseline">

            </ImageView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="235dp"
                android:background="@drawable/ic_baseline_search">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:background="@drawable/txt_edit_graywhite">
            </ImageView>

            <CheckBox
                android:id="@+id/chk_all"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="20dp"
                android:hint="ค้นหารายการ"
                android:paddingStart="20dp">
            </CheckBox>

            <TextView
                android:id="@+id/index"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="ลำดับ"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:layout_toEndOf="@+id/chk_all">

            </TextView>

            <TextView
                android:id="@+id/type"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:text="รายการ"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_toEndOf="@+id/index">

            </TextView>

            <TextView
                android:id="@+id/usage"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:text="รหัสใช้งาน"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_toEndOf="@+id/type">

            </TextView>

            <TextView
                android:id="@+id/pack"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:text="วันผลิต"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_toEndOf="@+id/usage">

            </TextView>

            <TextView
                android:id="@+id/exp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:text="วันหมดอายุ"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_toEndOf="@+id/pack">

            </TextView>

            <TextView
                android:id="@+id/day_exp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:text="หมดอายุ(วัน)"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_toEndOf="@+id/exp">

            </TextView>

            <ListView
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="130dp"
                tools:listitem="@layout/list_stock_linen_detail"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp">

            </ListView>

        </RelativeLayout>

        <Button
            android:id="@+id/back"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bt_bac_bue"
            android:layout_marginTop="560dp">

        </Button>

        <Button
            android:id="@+id/save"
            android:layout_width="180dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bt_save_newitem"
            android:layout_marginTop="560dp">

        </Button>

    </RelativeLayout>

</RelativeLayout>