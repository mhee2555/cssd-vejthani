<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fefe"
    android:orientation="horizontal"
    tools:context=".ApproveStockActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView024"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="เงื่อนไข"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView001"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="วันที่"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView002"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="รูปแบบฆ่าเชื้อ"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textAlignment="textStart" />

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gDate"
                        style="@style/box_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <Button
                        android:id="@+id/bDate"
                        android:layout_width="26dp"
                        android:layout_height="28dp"
                        android:layout_alignEnd="@+id/gDate"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:background="@drawable/date_box"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.561"
                        app:layout_constraintStart_toEndOf="@+id/editName"
                        app:layout_constraintTop_toBottomOf="@+id/button_search"
                        app:layout_constraintVertical_bias="0.109" />
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spinner01"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView003"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="เครื่อง"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner02"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView004"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"
                    android:text="รอบ"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner03"
                    style="@style/spinner_style"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/tSearch"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="3dp"
                    android:text="ค้นหา"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/item_search"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_edit"
                        android:ems="10"
                        android:hint="ค้นหา"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button_search"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/ic_menu_search"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.561"
                        app:layout_constraintStart_toEndOf="@+id/editName"
                        app:layout_constraintTop_toBottomOf="@+id/button_search"
                        app:layout_constraintVertical_bias="0.003" />
                </RelativeLayout>

                <Button
                    android:id="@+id/b_Import"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/sb_01"
                    android:text="+"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/ListView03"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.561"
                    app:layout_constraintStart_toEndOf="@+id/editName"
                    app:layout_constraintTop_toBottomOf="@+id/button_search"
                    app:layout_constraintVertical_bias="0.109" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/progress_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView005"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:paddingStart="15dp"
                        android:text="เลขเอกสาร"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView006"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="วันที่เอกสาร"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView007"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="แผนก"
                        android:textAlignment="center"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView008"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="จำนวน"
                        android:textAlignment="center"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView009"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="หมายเหตุ"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="นำเข้า"
                        android:textAlignment="center"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ListView
                    android:id="@+id/ListView01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/progress_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView011"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:text="ลำดับ"
                    android:textColor="@color/colorwhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView012"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="รายการ"
                    android:textColor="@color/colorwhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView013"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="จำนวน"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView014"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="เลือก"
                    android:textAlignment="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/ListView02"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>