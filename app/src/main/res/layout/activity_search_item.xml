<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/itemstock3070"
    android:orientation="vertical"
    android:windowSoftInputMode="stateAlwaysHidden"
    tools:context=".Search_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="สต๊อกจ่ายกลาง"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_linen"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="106dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bt_print_linen"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="156dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/search"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="201dp"
            android:layout_height="84dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/bt_back" />

        <LinearLayout
            android:layout_width="1050dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="168dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="ค้นหา"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/item_search"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/txt_edit_graywhite"
                    android:ems="10"
                    android:enabled="true"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/allchkbox"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="สถานะทั้งหมด" />

                <CheckBox
                    android:id="@+id/somechkbox"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="เฉพาะสถานะ" />

                <Spinner
                    android:id="@+id/spn_status"
                    style="@style/spinner_style_register"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="15dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button_import"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="480dp"
                    android:text="Import"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="ชื่อเครื่องมือ"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtname"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/txt_edit_graywhite"
                    android:ems="10"
                    android:enabled="true"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/labeldept"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:text="ของในสต๊อกแผนก "
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <Spinner
                    android:id="@+id/spn_dept"
                    style="@style/spinner_style_register"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="15dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button_edit"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="620dp"
                    android:layout_marginTop="5dp"
                    android:text="แก้ไข"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="ชื่อเครื่องมือ"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/txtcode"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/txt_edit_graywhite"
                    android:ems="10"
                    android:enabled="true"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1050dp"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="92dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="รายการ"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="วันผลิต"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="วันหมดอายุ"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="แผนกส่ง"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView131"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="แผนกปัจจุบัน"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="สถานะ"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="รหัสใช้งาน"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_search"
                    tools:listitem="@layout/list_data_search_only"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>