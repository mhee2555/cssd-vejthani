<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:id="@+id/row"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="1dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_background_transparent_color"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@color/list_background_transparent_color"
            android:visibility="gone"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_doc_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textColor="@color/list_text_color"
            android:background="@color/list_background_transparent_color"
            android:textSize="14dp"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="เลขที่เอกสาร"
            android:layout_marginRight="1dp"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_doc_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textColor="@color/list_text_color"
            android:background="@color/list_background_transparent_color"
            android:textSize="14dp"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="วันที่เอกสาร"
            android:layout_marginRight="1dp"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_department"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:textColor="@color/list_text_color"
            android:background="@color/list_background_transparent_color"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="แผนก"
            android:layout_marginRight="1dp"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_list_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textColor="@color/list_text_color"
            android:background="@color/list_background_transparent_color"
            android:textSize="14dp"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="รายการ"
            android:layout_marginRight="1dp"
            >
        </TextView>

        <TextView
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textColor="@color/list_text_color"
            android:background="@color/list_background_transparent_color"
            android:textSize="14dp"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="คงเหลือ"
            android:layout_marginRight="1dp"
            >
        </TextView>

        <Button
            android:id="@+id/btn_import"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:layout_margin="4dp"
            android:maxLines="1"
            android:text="นำเข้า"
            android:background="@drawable/button_master"
            android:textColor="@color/colorWhite"
            >
        </Button>

    </LinearLayout>


