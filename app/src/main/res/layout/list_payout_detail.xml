<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/txt"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_box"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tFields2"
            android:layout_alignEnd="@+id/txt_checkusage"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/textView63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tFields1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="เซ็ท"
            android:textColor="@color/button_operation"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tFields1"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView63"
            android:layout_alignTop="@+id/tFields4"
            android:text="หมดอายุ"
            android:textColor="@color/button_operation"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tFields2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_checkusage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tFields3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tFields2"
            android:layout_alignTop="@+id/imageView1"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tFields4"
            android:layout_alignTop="@+id/tFields1"
            android:text="จำนวน"
            android:textAlignment="center"
            android:textColor="@color/button_operation"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tFields4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="49dp"
            android:background="@drawable/text_edit"
            android:paddingTop="15dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_checkusage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/imageView1"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_check"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="14dp"
            app:srcCompat="@drawable/ic_radiobox_fill" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_closed"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>