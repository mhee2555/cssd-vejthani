<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="350dp"
    android:background="@drawable/popup_frame"
    >

    <TextView
        android:id="@+id/txt_item_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="ItemName"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="จำนวน"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/edt_qty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/text_view"
        android:gravity="center"
        android:inputType="number|numberDecimal"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/form_etext"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/edt_qty"
        android:layout_gravity="center_horizontal"
        android:layout_toStartOf="@+id/edt_qty"
        android:background="@drawable/ic_minus"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_print"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_popup_print_blue" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/edt_qty"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/edt_qty"
        android:background="@drawable/ic_plus"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_printing"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Printing..."
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:visibility="gone"
        android:textSize="14dp" />

</RelativeLayout>