<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView56"
            android:layout_below="@+id/textView56"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="xxx"
            android:textColor="@color/list_text_color"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="5dp"
            android:text="รายการ"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt_qty"
            android:text="จำนวน"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/txt_qty"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@+id/textView61"
            android:background="@drawable/text_standard"
            android:gravity="center|center_vertical"
            android:inputType="number|numberDecimal|numberSigned"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:text="0"
            android:textColor="@color/list_text_color"
            android:textSize="18dp"></EditText>

        <TextView
            android:id="@+id/textView61"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt_unit"
            android:text="หน่วยนับ"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_unit"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/button_operation"
            android:textSize="18dp"></TextView>


        <ImageView
            android:id="@+id/imv_remove"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_left_blue" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_code"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:visibility="gone"></TextView>


</LinearLayout>


