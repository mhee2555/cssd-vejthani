<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="6dp"
    >

    <RelativeLayout
        android:id="@+id/relativeLayoutSearch"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/txt_search"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/text_dropdown"
            android:color="#111111"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0.0dip"
            android:background="@drawable/search"
            android:layout_alignBottom="@+id/txt_search"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txt_search" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:background="@color/list_background_color"></ListView>

    <Button
        android:id="@+id/btm_create_newattirbrute"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_add" />

</LinearLayout>

