<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#5d5d5d" />
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:angle="270.0" />

            <corners android:bottomRightRadius="90dp"
                android:bottomLeftRadius="90dp"
                android:topLeftRadius="90dp"
                android:topRightRadius="90dp"/>
        </shape>
    </item>

    <item android:right="14px" android:top="5px">
        <bitmap android:gravity="right" android:src="@drawable/qr_dropdown" />
    </item>

</layer-list>